<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <declare-styleable name="SlidingScaleTitleView">
        <attr name="text_color" format="color" />
        <attr name="text_size" format="dimension" />
        <attr name="select_text_scale" format="float" />
        <attr name="un_select_text_alpha" format="float" />
    </declare-styleable>

    <declare-styleable name="CircleProgressView">
        <attr name="cpv_text_size" format="float" />
        <attr name="cpv_text_color" format="color" />
        <attr name="cpv_progress_color" format="color" />
        <attr name="cpv_progress_width" format="dimension" />
        <attr name="cpv_stroke_color" format="color" />
        <attr name="cpv_bg" format="color" />
        <attr name="cpv_progress" format="integer" />
        <attr name="cpv_center_color" format="color" />
        <attr name="cpv_stroke_width" format="dimension" />
    </declare-styleable>
</resources>
